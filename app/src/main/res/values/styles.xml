<resources>

    <!-- Base application theme. -->
    <style name="DARK" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="barColor">#424242</item>
        <item name="bgColor">#201C1C</item>

        <item name="ic_to_edit_bag">@drawable/ic_to_edit_bag_white</item>
        <item name="ic_to_add_check">@drawable/ic_to_add_check_white</item>
        <item name="ic_to_add_clear">@drawable/ic_to_add_clear_white</item>
        <item name="ic_to_delete">@drawable/ic_to_delete_white</item>
        <item name="ic_to_settings">@drawable/ic_to_settings_white</item>
        <item name="ic_to_add_subject">@drawable/ic_to_add_subject_white</item>

    </style>

    <!-- Base application theme. -->
    <style name="LIGHT" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">#000000</item>
        <item name="barColor">#F3F3F3</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>

        <item name="ic_to_edit_bag">@drawable/ic_to_edit_bag</item>
        <item name="ic_to_add_check">@drawable/ic_to_add_check</item>
        <item name="ic_to_add_clear">@drawable/ic_to_add_clear</item>
        <item name="ic_to_delete">@drawable/ic_to_delete</item>
        <item name="ic_to_settings">@drawable/ic_to_settings</item>
        <item name="ic_to_add_subject">@drawable/ic_to_add_subject</item>
    </style>

</resources>
