<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="?attr/bgColor"
    android:id="@+id/relativeLayout">

    <!-- icon -->

    <!-- title -->

    <ImageButton
        android:id="@+id/layout_list_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:contentDescription="@string/delete_icon_description"
        app:srcCompat="@drawable/ic_to_edit_bag" />

    <TextView
        android:id="@+id/layout_list_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/layout_list_button"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:layout_toStartOf="@+id/layout_list_button"
        android:gravity="start|center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:textAlignment="gravity"
        android:textColor="?attr/textColor"
        android:textSize="26sp" />


</RelativeLayout>